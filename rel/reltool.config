%%% -*- mode: erlang -*-g
{sys, [
       {lib_dirs, ["../deps","../.."]},
       {rel, "erlstats_web", "0.0.1",
        [
         kernel,
         stdlib,
         sasl,
	 erlstats,
         misultin,
	 appmon,
	 jsx,
	 erlstats_web
        ]},
       {rel, "start_clean", "",
        [
         kernel,
         inets,
         stdlib
        ]},
       {boot_rel, "erlstats_web"},
       {profile, embedded},
       {excl_sys_filters, ["^bin/.*",
                           "^erts.*/bin/(dialyzer|typer)"]},
       {app, sasl, [{incl_cond, include}]},
       {app, erlstats_web, [{incl_cond, include}]}
      ]}.

{target_dir, "erlstats_web"}.
{overlay_vars, "vars.config"}.
{overlay, [
           {mkdir, "{{log_dir}}"},
	   {copy, "files/erl", "\{\{erts_vsn\}\}/bin/erl"},
           {copy, "files/nodetool", "\{\{erts_vsn\}\}/bin/nodetool"},
           {template, "files/erlstats_web", "bin/erlstats_web"},
           {template, "files/app.config", "etc/app.config"},
           {template, "files/vm.args", "etc/vm.args"}
           ]}.

%% == LFE Compiler ==

%% LFE files to compile before the rest
{lfe_first_files, []}.

%% Options for the LFE compiler
{lfe_opts, []}.

%% == ErlyDTL Compiler ==

%% Options for the ErlyDTL compiler
{erlydtl_opts, []}.

%% == EUnit ==

%% Options for eunit:test()
{eunit_opts, []}.

%% Additional compile options for eunit. erl_opts from above is also used
{eunit_compile_opts, []}.

%% Whether to enable coverage reporting. Default is `false'
{cover_enabled, false}.

%% == Dialyzer ==

%% Options for running the dialyzer, right now only `plt' is supported
{dialyzer_opts, []}.
